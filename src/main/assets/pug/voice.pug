doctype html
html(ng-app="app")
    | <#include "/define.ftl">
    head
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        meta(charset="utf-8")
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title Voice - ChongQing Devfest 2016 ML
        link(href="${Context}/webjars/bootstrap-css/3.3.6/css/bootstrap.css", rel="stylesheet")
        link(href="${Context}/webjars/gentelella/1.3.0/build/css/custom.min.css", rel="stylesheet")
        style.
            .timeline .tags {
                width: 100px;
            }

            .timeline .tag {
                padding: 5px;
            }

            .timeline .block {
                margin-left: 125px;
            }

            strong {
                padding-left: 2px;
            }

            .thumbnail {
                height: auto;
            }
            .thumbnail .image {
                height: auto;
            }
    body.nav-md(ng-controller="BodyCtrl", style="background:#EDEDED;")
        .container.body
            .main_container
                .right_col(style="margin-left:0px;background:#fff;")
                    .page-title
                        .title_left
                            h3 Voice - ChongQing Devfest 2016 ML
                    .clearfix
                    .row
                        .col-md-9
                            .x_panel
                                .x_content
                                    ul.list-unstyled.timeline
                                        li.col-md-6(ng-repeat="voice in voices | orderBy: 'created' : 'reverse'")
                                            .block
                                                .tags
                                                    .tag(ng-bind="voice.created | date: 'yyyy-MM-dd HH:mm:ss'")
                                                .block_content
                                                    h2.title(ng-bind="voice.user.nickname")
                                                    hr(style="margin: 2px 0;")
                                                    div(ng-bind="voice.text")
                        .col-md-3
                            .thumbnail
                                .image.view.view-first
                                    img(style='width: 100%;display: block;', src="${Assets}/img/voice.png")
                                .caption
                                    label.label.label-success 扫描二维码体验


        script.
            var Context = "${Context}";
            var Assets = "${Assets}";
        script(src="${Context}/webjars/angular/1.5.8/angular.min.js")
        script(src="${Assets}/js/voice.js")
